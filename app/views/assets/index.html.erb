<div class="max-w-2xl mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-4">Manage Assets for <%= @song.name %></h1>

  <%= link_to "â† Back to Song", playlist_song_path(@playlist, @song), class: "text-blue-600 hover:underline mb-4 block" %>

  <!-- Upload new asset form -->
  <div class="mb-8 p-4 border rounded">
    <h2 class="text-lg font-semibold mb-2">Add New Asset</h2>
    <%= form_with(model: [@playlist, @song, Asset.new], local: true, html: { multipart: true }) do |f| %>
      <div class="mb-2">
        <%= f.label :name, "Description/Name", class: "block font-medium" %>
        <%= f.text_field :name, class: "mt-1 block w-full border rounded p-2" %>
      </div>
      <div class="mb-2">
        <%= f.label :file, "Audio File", class: "block font-medium" %>
        <%= f.file_field :file, class: "mt-1 block w-full border rounded p-2" %>
      </div>
      <div>
        <%= f.submit "Upload", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
      </div>
    <% end %>
  </div>

  <!-- Assets table -->
  <h2 class="text-lg font-semibold mb-2">Uploaded Assets</h2>
  <table class="table-auto w-full border-collapse">
    <thead>
      <tr class="bg-gray-100">
        <th class="text-left p-2">Order</th>
        <th class="text-left p-2">Name</th>
        <th class="text-left p-2">Audio</th>
        <th class="text-left p-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @assets.each_with_index do |asset, index| %>
        <tr class="border-t hover:bg-gray-50">
          <td class="p-2">
            <% if index > 0 %>
              <%= link_to "â¬†", move_up_playlist_song_asset_path(@playlist, @song, asset), data: { turbo_method: :patch }, class: "hover:text-blue-600", title: "Move Up" %>
            <% end %>
            <% if index < @assets.size - 1 %>
              <%= link_to "â¬‡", move_down_playlist_song_asset_path(@playlist, @song, asset), data: { turbo_method: :patch }, class: "hover:text-blue-600", title: "Move Down" %>
            <% end %>
          </td>
          <td class="p-2"><%= asset.name.presence || "â€”" %></td>
          <td class="p-2">
            <% if asset.file.attached? %>
              <audio controls style="height: 32px;">
                <source src="<%= url_for(asset.file) %>" type="<%= asset.file.content_type %>">
                Your browser does not support the audio element.
              </audio>
            <% else %>
              <span class="text-gray-400">No file</span>
            <% end %>
          </td>
          <td class="p-2 space-x-2">
            <%= link_to "âœï¸ Edit", edit_playlist_song_asset_path(@playlist, @song, asset), class: "text-yellow-600 hover:underline" %>
            <%= link_to "ðŸ—‘ Delete", playlist_song_asset_path(@playlist, @song, asset), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
