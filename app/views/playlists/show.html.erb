<div class="max-w-5xl mx-auto px-4 py-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-2xl font-bold"><%= @playlist.name %></h2>
    <div class="space-x-2">
      <%= link_to "✏️ Edit Playlist", edit_playlist_path(@playlist), class: "text-yellow-600 hover:underline" %>
      <%= link_to "← Back to Playlists", playlists_path, class: "text-blue-600 hover:underline" %>
    </div>
  </div>

  <%= link_to "➕ New Song", new_playlist_song_path(@playlist), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>

  <h3 class="text-xl font-semibold mt-6 mb-2">Songs</h3>

  <table class="table-auto w-full border-collapse">
    <thead>
      <tr class="bg-gray-100">
        <th class="text-left p-2">Name</th>
        <th class="text-left p-2">BPM</th>
        <th class="text-left p-2">Time Signature</th>
        <th class="text-left p-2">Sort</th>
        <th class="text-left p-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @songs.each_with_index do |song, index| %>
        <tr class="border-t hover:bg-gray-50">
          <td class="p-2">
            <%= link_to song.name, playlist_song_path(@playlist, song), class: "text-blue-600 hover:underline" %>
          </td>
          <td class="p-2"><%= song.bpm %></td>
          <td class="p-2"><%= song.time_signature %></td>
          <td class="p-2 space-x-2">
            <% if index > 0 %>
              <%= link_to "⬆", move_up_playlist_song_path(@playlist, song), data: { turbo_method: :patch }, title: "Move Up", class: "hover:text-blue-600" %>
            <% end %>
            <% if index < @songs.size - 1 %>
              <%= link_to "⬇", move_down_playlist_song_path(@playlist, song), data: { turbo_method: :patch }, title: "Move Down", class: "hover:text-blue-600" %>
            <% end %>
          </td>
          <td class="p-2 space-x-2">
            <%= link_to "✏️ Edit", edit_playlist_song_path(@playlist, song), class: "text-yellow-600 hover:underline" %>
            <%= link_to "🎵 Manage Assets", playlist_song_assets_path(@playlist, song), class: "text-green-600 hover:underline" %>
            <%= link_to "🗑 Delete", playlist_song_path(@playlist, song), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
